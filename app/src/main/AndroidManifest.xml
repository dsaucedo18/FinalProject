<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.danny_mac.myapplication">

    <application
        android:allowBackup="true"
        android:icon="@drawable/AndroidSoccerAppLogo"
        android:label="Android Soccer App"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="Android Soccer">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Leagues"
            android:label="Leagues Screen" />
        <activity android:name=".myLeagues.PremLeague"
                  android:label="Premier League"/>
        <activity android:name=".myLeagues.Bundesliga"
                  android:label="Bundesliga"></activity>
    </application>

</manifest>